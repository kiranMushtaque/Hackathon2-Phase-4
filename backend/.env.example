# Phase III Backend Environment Variables

# Database Configuration
# For development, use SQLite:
DATABASE_URL=sqlite:///./taskmanager.db

# For production, use PostgreSQL/Neon:
# DATABASE_URL=postgresql://user:password@host:5432/tododb

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
BETTER_AUTH_SECRET=your-better-auth-secret-change-this

# JWT Settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME=Task Manager API - Phase III
DEBUG=True

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8001

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
